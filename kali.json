{
  "variables": {
    "iso_url": "http://http.kali.org/kali/dists/kali-rolling/main/installer-amd64/current/images/netboot/mini.iso",
    "iso_checksum": "5e790f78ba091387ccb403b4235d8660e2832b02e63d618ee11bc5627f3c2d8e",
    "iso_checksum_type": "sha256",
    "disk_size": "40960",
    "memory_size": "4096",
    "cpus": "4",
    "vm_name": "kali-linux-rolling",
    "headless": "true"
  },
  "builders": [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "headless": "{{user `headless`}}",
      "vm_name": "{{user `vm_name`}}",
      "cpus": "{{ user `cpus`}}",
      "memory": "{{ user `memory_size`}}",
      "disk_size": "{{user `disk_size`}}",
      "format": "qcow2",
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_timeout": "120m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "locale=en_US <wait>",
        "keymap=us <wait>",
        "<enter><wait>"
      ], 
      "shutdown_command": "",
      "qemuargs": [
           [ "--cpu", "host" ],
           [ "--no-acpi"],
           [ "-vga", "qxl" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/common/update.sh",
        "scripts/common/install.sh",
        "scripts/common/sshd.sh",
        "scripts/common/networking.sh",
        "scripts/common/vagrant.sh",
        "scripts/kali/custom.sh",
        "scripts/common/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "pause_before": "10s"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output" : "builds/{{user `vm_name`}}.box",
      "only": ["qemu"],
      "vagrantfile_template": "Vagrantfile.template",
      "keep_input_artifact": true
    }
  ]
}
